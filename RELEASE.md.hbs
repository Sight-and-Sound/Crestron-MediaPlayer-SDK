{{#each releases}}
  {{#if @first}}
    {{#if summary}}
      {{summary}}
    {{/if}}
    {{#each commits}}
      - {{subject}}{{#if href}} [`{{shorthash}}`]({{href}}){{/if}}
    {{/each}}
    {{#each fixes}}
      - {{commit.subject}}{{#each fixes}}{{#if href}} [`#{{id}}`]({{href}}){{/if}}{{/each}}
    {{/each}}
    {{#each merges}}
      - {{message}}{{#if href}} [`#{{id}}`]({{href}}){{/if}}
    {{/each}}
  {{/if}}
{{/each}}
