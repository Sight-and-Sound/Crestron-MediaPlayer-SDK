{
  "extends": "@jessety",
  "rules": {
    "linebreak-style": ["warn", "unix"],
    "indent": ["warn", 4, { "SwitchCase": 1 }],
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-non-null-assertion": "off"
  },
  "overrides": [
    {
      "files": ["**/*.test.{ts,js,cjs,mjs}"],
      "env": { "jest": true },
      "rules": { "no-console": "warn" }
    }
  ]
}
